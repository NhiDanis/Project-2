<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2>User Settings</h2>
            <form class="settings">
                <div class="form-group">
                    <label for="exampleInputEmail1">Full Name</label>
                    <input type="text" data-name={{this.name}} class="form-control" id="name-input"
                        placeholder={{this.name}}>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" data-email={{this.email}} class="form-control" id="email-input"
                        placeholder={{this.email}}>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="password-input" placeholder="New Password">
                </div>
                <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    <span class="sr-only">Error:</span> <span class="msg"></span>
                </div>
                <button type="submit" class="btn btn-default">Apply Changes</button>
            </form>
        </div>
    </div>
</div>
<footer class="fixed-bottom py-4">
    <div class="text-center">
        <small>Copy &copy;</small>
    </div>
</footer>
<script type="text/javascript" src="js/settings.js"></script>